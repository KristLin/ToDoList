<%- include("header") -%>

<body>

  <div class="box" id="heading">
    <h1><%= date %></h1>
  </div>

  <div class="box">
    <% for (let i=0; i<things.length; i++) { %>
    <div class="item">
      <input type="checkbox" name="" value="">
      <p><%= things[i] %></p>

      <form class="item delete-form" action="/delete" method="post">
        <input type="hidden" name="deleteItem" value="<%= things[i] %>">
        <button class="delete-button" type="submit" name="button" value=>-</button>
      </form>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" value="" autocomplete="false">
      <button class="add-button" type="submit" name="button">+</button>
    </form>
  </div>


  <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
  <script src="/js/index.js" charset="utf-8"></script>

</body>

</html>

<%- include("footer") -%>
